<ul>
  <% @events.each do |event| %>
  <li>
    <%= event.name %>
    <%= link_to 'Show', event %>
    <%= link_to 'Edit', edit_event_path(event) %>
    <%= button_to 'Delete', event, :method => :delete, :data => { :confirm => "Are you sure?" } %>
  </li>
  <% end %>
</ul>
<%= paginate @events %>
<%= link_to 'New Event', new_event_path %>
